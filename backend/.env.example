# Database Configuration
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite

# JWT Configuration — generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRE=30d

# Encryption — generate 32-byte key: node -e "console.log(require('crypto').randomBytes(24).toString('base64'))"
ENCRYPTION_KEY=
MASTER_KEY=

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=CareSync <noreply@caresync.com>

# Firebase Admin SDK (for push notifications)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security — generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
BCRYPT_ROUNDS=12
SESSION_SECRET=

# Development/Debug
DEBUG=caresync:*
VERBOSE_LOGGING=true
